{
	"compilerOptions": {
		"removeComments": false,
		"preserveConstEnums": true,
		"declaration": false,
		"outDir": "./dist/",
		"sourceMap": true,
		"noImplicitAny": true,
		"suppressImplicitAnyIndexErrors": true,
		"allowSyntheticDefaultImports": true,
		"strictNullChecks": true,
		"noUnusedLocals": true,
		"noImplicitThis": true,
		"noUnusedParameters": true,
		"importHelpers": true,
		"noEmitHelpers": true,
		"moduleResolution": "node",
		"module": "commonjs",
		"target": "es5",
		"jsx": "react"
	},
	"files": [
		"./declarations.d.ts",
		"./src/index.tsx"
	],
	"exclude": [
		"node_modules",
		"dist"
	],
	"formatCodeOptions": {
		"indentSize": 4,
		"tabSize": 4
	}
}