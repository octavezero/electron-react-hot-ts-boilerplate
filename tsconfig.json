{
	"compilerOptions": {
		"removeComments": false,
		"preserveConstEnums": true,
		"sourceMap": true,
		"suppressImplicitAnyIndexErrors": true,
		"allowSyntheticDefaultImports": true,
		"strictNullChecks": true,
		"noUnusedLocals": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"moduleResolution": "node",
		"noEmitOnError": true,
		"module": "es6",
		"target": "es6",
		"jsx": "react"
	},

	// This is opinionated for me. Change it as per your wish. (Don't Forget to change tslint config as well)
	"formatCodeOptions": {
		"indentSize": 4,
		"tabSize": 4
	}
}